generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// -------------------
// User Model
// -------------------
model User {
  id        String   @id @default(uuid())
  name      String
  username  String   @unique
  email     String   @unique
  birthdate DateTime
  role      UserRole
  createdAt DateTime @default(now())

  purchases Purchase[]
}

// -------------------
// Archetype, Module and Activity Models
// -------------------
model Archetype {
  id          String   @id @default(uuid())
  name        String
  description String
  modules     Module[]
}

model Module {
  id          String     @id @default(uuid())
  title       String
  description String
  order       Int
  archetypeId String?
  ageGroup    AgeGroup
  archetype   Archetype? @relation(fields: [archetypeId], references: [id])
  activities  Activity[]
}

model Activity {
  id       String       @id @default(uuid())
  moduleId String
  type     ActivityType
  title    String
  order    Int
  content  Json // structure varies per activity type
  module   Module       @relation(fields: [moduleId], references: [id])
}

// -------------------
// Store Models
// -------------------
model Product {
  id          String  @id @default(uuid())
  name        String
  description String
  price       Int
  active      Boolean @default(true)

  purchases Purchase[]
}

model Purchase {
  id            String   @id @default(uuid())
  responsibleId String
  productId     String
  date          DateTime @default(now())

  responsible User    @relation(fields: [responsibleId], references: [id])
  product     Product @relation(fields: [productId], references: [id])
}

// -------------------
// Enums
// -------------------
enum UserRole {
  ADMIN
  RESPONSIBLE
  LEARNER
}

enum AgeGroup {
  CHILD // <= 11 years old
  TEEN // >= 17 years old
}

enum ActivityType {
  FAKE_NEWS
  POST_OR_NOT
  QUIZ
  THEMED_PASSWORD
  FAKE_CHAT
  MATCH_PAIRS
  INFORMATIVE_TEXT
}
